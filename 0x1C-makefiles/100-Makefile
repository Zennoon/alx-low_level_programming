# -*- MakeFile -*-
.PHONY: all clean oclean fclean re

CC=gcc
SRC=main.c school.c
OBJ=$(SRC:%.c=%.o)
NAME=school
CFLAGS=-Wall -Werror -Wextra -pedantic

all: $(OBJ)
ifneq ("$(wildcard m.h)","")
	@export CFLAGS
	$(CC) $(OBJ) -o $(NAME)
endif

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
